<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#fff">

    <ImageView
        android:id="@+id/item_myfavorite_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/item_myfavorite_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_myfavorite_iv"
        android:layout_toRightOf="@id/item_myfavorite_iv"
        android:text="MO"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_myfavorite_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_myfavorite_name"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/item_myfavorite_iv"
        android:text="131.00"
        android:textColor="#e41216" />

    <ImageView
        android:id="@+id/item_myfavorite_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/delete" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c5ca" />


</RelativeLayout>