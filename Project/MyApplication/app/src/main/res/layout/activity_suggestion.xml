<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#66cc99">

        <ImageView
            android:id="@+id/mysuggestion_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/goback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="意见反馈"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dadee2"
        android:orientation="vertical"
        android:padding="15dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="#fff"
            android:minHeight="200dp">

            <EditText
                android:id="@+id/mysuggestion_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="你有什么建议告诉我们，我们看得到哦~" />

            <TextView
                android:id="@+id/mysuggestion_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="10dp"
                android:text="0/500字" />
        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="50dp"
            android:background="#fff">

            <TextView
                android:id="@+id/mysuggestion_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="联系方式"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/mysuggestion_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/mysuggestion_phone_tv"
                android:background="@null"
                android:hint="非必填"
                android:textSize="18sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/mysuggestion_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#66cc99"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="22sp" />


    </LinearLayout>


</LinearLayout>